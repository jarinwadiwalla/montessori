---
import PageLayout from '../layouts/PageLayout.astro';
import PartnerCard from '../components/partners/PartnerCard.astro';
import { getCollection } from 'astro:content';

const partners = (await getCollection('partners')).sort(
  (a, b) => a.data.order - b.data.order
);
---

<PageLayout
  title="Global Partners"
  description="Meet the AMI-trained Montessori guides and global partners advancing Montessori for Adolescents education around the world."
  heroTitle="Global Partners"
  heroSubtitle="Our experienced team all carry the AMI 12-18 Adolescent Diploma, have worked in established Adolescent Communities, and have started programs from the ground."
>
  <div class="container">
    <div class="partners-grid">
      {partners.map((partner) => (
        <PartnerCard
          name={partner.data.name}
          title={partner.data.title}
          organization={partner.data.organization}
          location={partner.data.location}
          bio={partner.data.bio}
          website={partner.data.website}
        />
      ))}
    </div>

  </div>
</PageLayout>

<style>
  .partners-grid {
    display: grid;
    gap: var(--space-xl);
    margin-bottom: var(--space-4xl);
  }

</style>
