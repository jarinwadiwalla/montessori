---
interface Props {
  label?: string;
}

const { label = 'Support Our Work' } = Astro.props;
---

<a
  href="https://buy.stripe.com/fZuaEXcrsgkq77OcEz4sE05"
  target="_blank"
  rel="noopener noreferrer"
  class="donate-button"
>
  <svg class="donate-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
    <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z" fill="currentColor"/>
  </svg>
  <span>{label}</span>
</a>

<style>
  .donate-button {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-sm) var(--space-lg);
    background-color: var(--color-lavender);
    color: var(--color-purple);
    font-size: var(--text-sm);
    font-weight: 600;
    border-radius: var(--radius-md);
    transition: all var(--transition-fast);
    text-decoration: none;
  }

  .donate-button:hover {
    background-color: var(--color-lavender-dark);
    color: var(--color-purple);
    transform: translateY(-1px);
    box-shadow: var(--shadow-sm);
  }

  .donate-icon {
    width: 18px;
    height: 18px;
    flex-shrink: 0;
  }
</style>
