---
import BuyMeACoffee from '../shared/BuyMeACoffee.astro';

const currentYear = new Date().getFullYear();
---

<footer class="site-footer">
  <div class="container">
    <div class="footer-logo-wrapper">
      <img src="/images/3.png" alt="Montessori for Adolescents" class="footer-logo" width="280" />
      <p class="footer-tagline">
        Nurturing the adolescent spirit through Montessori wisdom.
      </p>
    </div>

    <div class="footer-grid">
      <div class="footer-links">
        <h4 class="footer-heading">Explore</h4>
        <ul>
          <li><a href="/vision/">Vision</a></li>
          <li><a href="/about/">About</a></li>
          <li><a href="/partners/">Global Partners</a></li>
          <li><a href="/resources/">Resources</a></li>
          <li><a href="/webinars/">Webinars</a></li>
        </ul>
      </div>

      <div class="footer-connect">
        <h4 class="footer-heading">Connect</h4>
        <ul>
          <li><a href="/contact/">Collaborate With Us</a></li>
        </ul>
        <div class="footer-coffee">
          <BuyMeACoffee label="Support Our Work" />
        </div>
      </div>
    </div>

    <div class="footer-bottom">
      <p>&copy; {currentYear} Montessori for Adolescents. All rights reserved.</p>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background-color: var(--color-earth-dark);
    color: rgba(250, 247, 242, 0.8);
    padding-block: var(--space-3xl) var(--space-xl);
    margin-top: var(--space-4xl);
  }

  .footer-logo-wrapper {
    text-align: center;
    margin-bottom: var(--space-3xl);
    padding-bottom: var(--space-2xl);
    border-bottom: 1px solid rgba(250, 247, 242, 0.1);
  }

  .footer-logo {
    height: auto;
    width: 240px;
    filter: brightness(0) invert(1);
    margin-inline: auto;
    margin-bottom: var(--space-md);
  }

  .footer-tagline {
    font-size: var(--text-sm);
    line-height: var(--leading-relaxed);
    color: rgba(250, 247, 242, 0.6);
    max-width: 300px;
    margin-inline: auto;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-3xl);
    max-width: 500px;
    margin-inline: auto;
    margin-bottom: var(--space-3xl);
    text-align: center;
  }

  .footer-heading {
    font-family: var(--font-heading);
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--color-cream);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    margin-bottom: var(--space-md);
  }

  .footer-links ul,
  .footer-connect ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-links li,
  .footer-connect li {
    margin-bottom: var(--space-sm);
  }

  .footer-links a,
  .footer-connect a {
    color: rgba(250, 247, 242, 0.7);
    font-size: var(--text-sm);
    transition: color var(--transition-fast);
  }

  .footer-links a:hover,
  .footer-connect a:hover {
    color: var(--color-cream);
  }

  .footer-coffee {
    margin-top: var(--space-lg);
  }

  .footer-bottom {
    border-top: 1px solid rgba(250, 247, 242, 0.1);
    padding-top: var(--space-xl);
    text-align: center;
  }

  .footer-bottom p {
    font-size: var(--text-xs);
    color: rgba(250, 247, 242, 0.4);
  }

  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: 1fr;
      gap: var(--space-xl);
      text-align: center;
    }

    .footer-logo {
      width: 200px;
    }
  }
</style>
