---
import BuyMeACoffee from '../shared/BuyMeACoffee.astro';

const currentYear = new Date().getFullYear();
---

<footer class="site-footer">
  <div class="container">
    <div class="footer-logo-wrapper">
      <img src="/images/3.png" alt="Montessori for Adolescents" class="footer-logo" width="280" />
      <p class="footer-tagline">
        Nurturing the adolescent spirit through Montessori wisdom.
      </p>
    </div>

    <div class="footer-grid">
      <div class="footer-links">
        <h4 class="footer-heading">Explore</h4>
        <ul>
          <li><a href="/support/">Support</a></li>
          <li><a href="/access/">Access</a></li>
          <li><a href="/whole-person/">Whole Person</a></li>
          <li><a href="/resources/">Resources</a></li>
          <li><a href="/our-team/">Our Team</a></li>
        </ul>
      </div>

      <div class="footer-connect">
        <h4 class="footer-heading">Connect</h4>
        <ul>
          <li><a href="/contact/">Get in Touch</a></li>
        </ul>
        <a href="https://www.instagram.com/montessoriforadolescents" target="_blank" rel="noopener noreferrer" class="footer-instagram" aria-label="Follow us on Instagram">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <rect x="2" y="2" width="20" height="20" rx="5" stroke="currentColor" stroke-width="1.5"/>
            <circle cx="12" cy="12" r="5" stroke="currentColor" stroke-width="1.5"/>
            <circle cx="17.5" cy="6.5" r="1" fill="currentColor"/>
          </svg>
        </a>
      </div>
    </div>

    <div class="footer-support">
      <h4 class="footer-heading">Support Our Mission</h4>
      <p class="footer-support-text">
        Every dollar helps communities guide adolescents through meaningful work rooted in Montessori philosophy.
      </p>
      <BuyMeACoffee label="Support Our Work" />
    </div>

    <div class="footer-bottom">
      <p>&copy; {currentYear} Montessori for Adolescents. All rights reserved.</p>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background-color: var(--color-earth-dark);
    color: rgba(250, 247, 242, 0.8);
    padding-block: var(--space-3xl) var(--space-xl);
    margin-top: var(--space-4xl);
  }

  .footer-logo-wrapper {
    text-align: center;
    margin-bottom: var(--space-3xl);
    padding-bottom: var(--space-2xl);
    border-bottom: 1px solid rgba(250, 247, 242, 0.1);
  }

  .footer-logo {
    height: auto;
    width: 240px;
    filter: brightness(0) invert(1);
    margin-inline: auto;
    margin-bottom: var(--space-md);
  }

  .footer-tagline {
    font-size: var(--text-sm);
    line-height: var(--leading-relaxed);
    color: rgba(250, 247, 242, 0.6);
    max-width: 300px;
    margin-inline: auto;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-3xl);
    max-width: 500px;
    margin-inline: auto;
    margin-bottom: var(--space-3xl);
    text-align: center;
  }

  .footer-heading {
    font-family: var(--font-heading);
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--color-cream);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    margin-bottom: var(--space-md);
  }

  .footer-links ul,
  .footer-connect ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-links li,
  .footer-connect li {
    margin-bottom: var(--space-sm);
  }

  .footer-links a,
  .footer-connect a {
    color: rgba(250, 247, 242, 0.7);
    font-size: var(--text-sm);
    transition: color var(--transition-fast);
  }

  .footer-links a:hover,
  .footer-connect a:hover {
    color: var(--color-cream);
  }

  .footer-instagram {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: rgba(250, 247, 242, 0.7);
    margin-top: var(--space-md);
    transition: color var(--transition-fast);
  }

  .footer-instagram:hover {
    color: var(--color-cream);
  }

  .footer-support {
    text-align: center;
    max-width: 400px;
    margin-inline: auto;
    margin-bottom: var(--space-3xl);
    padding-top: var(--space-2xl);
    border-top: 1px solid rgba(250, 247, 242, 0.1);
  }

  .footer-support-text {
    font-size: var(--text-sm);
    color: rgba(250, 247, 242, 0.6);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-md);
  }

  .footer-bottom {
    border-top: 1px solid rgba(250, 247, 242, 0.1);
    padding-top: var(--space-xl);
    text-align: center;
  }

  .footer-bottom p {
    font-size: var(--text-xs);
    color: rgba(250, 247, 242, 0.4);
  }

  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: 1fr;
      gap: var(--space-xl);
      text-align: center;
    }

    .footer-logo {
      width: 200px;
    }
  }
</style>
