---
import Button from '../shared/Button.astro';

interface Props {
  title: string;
  description: string;
  category: string;
  downloadUrl: string;
  publishDate: Date;
}

const { title, description, category, downloadUrl, publishDate } = Astro.props;

const categoryLabels: Record<string, string> = {
  guide: 'Guide',
  worksheet: 'Worksheet',
  research: 'Research',
  toolkit: 'Toolkit',
};

const formattedDate = new Intl.DateTimeFormat('en-US', {
  year: 'numeric',
  month: 'long',
}).format(publishDate);
---

<article class="resource-card">
  <div class="resource-meta">
    <span class="resource-category">{categoryLabels[category] || category}</span>
    <span class="resource-date">{formattedDate}</span>
  </div>
  <h3 class="resource-title">{title}</h3>
  <p class="resource-description">{description}</p>
  <Button href={downloadUrl} variant="outline" size="sm" external>
    Download PDF
  </Button>
</article>

<style>
  .resource-card {
    background-color: var(--color-white);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--space-xl);
    transition: box-shadow var(--transition-base);
  }

  .resource-card:hover {
    box-shadow: var(--shadow-md);
  }

  .resource-meta {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    margin-bottom: var(--space-md);
  }

  .resource-category {
    font-size: var(--text-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    color: var(--color-sage);
    background-color: rgba(122, 139, 111, 0.1);
    padding: var(--space-xs) var(--space-sm);
    border-radius: var(--radius-sm);
  }

  .resource-date {
    font-size: var(--text-xs);
    color: var(--color-text-light);
  }

  .resource-title {
    font-size: var(--text-xl);
    margin-bottom: var(--space-sm);
  }

  .resource-description {
    font-size: var(--text-sm);
    color: var(--color-text-light);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-lg);
  }
</style>
