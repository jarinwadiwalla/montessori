---
import DonateButton from '../shared/DonateButton.astro';
---

<section class="donation-section section">
  <div class="container">
    <div class="donation-inner">
      <div class="donation-content">
        <span class="donation-label">Support Access</span>
        <h2 class="donation-title">This Work Belongs to Everyone</h2>
        <p class="donation-text">
          Your contribution helps bring Montessori adolescent programming to communities that have
          never had access â€” funding training, on-site support, and the creation of new Centers of
          Study and Work where the world needs them most.
        </p>
        <div class="donation-action">
          <DonateButton label="Support Our Work" />
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .donation-section {
    background: linear-gradient(135deg, var(--color-purple) 0%, var(--color-earth-dark) 100%);
    padding-block: var(--space-4xl);
  }

  .donation-inner {
    max-width: 700px;
    margin-inline: auto;
    text-align: center;
  }

  .donation-label {
    display: inline-block;
    font-family: var(--font-body);
    font-size: var(--text-sm);
    font-weight: 600;
    letter-spacing: var(--tracking-wider);
    text-transform: uppercase;
    color: var(--color-terracotta-light);
    margin-bottom: var(--space-md);
  }

  .donation-title {
    font-size: var(--text-4xl);
    color: var(--color-cream);
    margin-bottom: var(--space-xl);
  }

  .donation-text {
    font-size: var(--text-lg);
    color: rgba(250, 247, 242, 0.85);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-2xl);
  }

  .donation-action {
    display: flex;
    justify-content: center;
  }
</style>
