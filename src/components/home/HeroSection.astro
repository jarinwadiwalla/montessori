---
import Button from '../shared/Button.astro';
---

<section class="hero">
  <div class="container hero-content">
    <h1 class="hero-title">Montessori for Adolescents</h1>
    <p class="hero-subtitle">
      Empowering educators and parents to nurture the adolescent spirit
      through Montessori philosophy, community, and shared wisdom.
    </p>
    <div class="hero-actions">
      <Button href="/vision/" variant="primary" size="lg">Our Vision</Button>
      <Button href="/webinars/" variant="outline" size="lg">Explore Webinars</Button>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    padding-block: var(--space-5xl);
    text-align: center;
    overflow: hidden;
    min-height: 60vh;
    display: flex;
    align-items: center;
    background: linear-gradient(135deg, var(--color-purple) 0%, var(--color-earth-dark) 100%);
  }

  .hero-content {
    position: relative;
    z-index: 1;
  }

  .hero-title {
    font-size: var(--text-5xl);
    color: var(--color-cream);
    margin-bottom: var(--space-lg);
    letter-spacing: var(--tracking-tight);
  }

  .hero-subtitle {
    font-size: var(--text-lg);
    color: rgba(250, 247, 242, 0.85);
    max-width: 620px;
    margin-inline: auto;
    margin-bottom: var(--space-2xl);
    line-height: var(--leading-relaxed);
  }

  .hero-actions {
    display: flex;
    gap: var(--space-md);
    justify-content: center;
    flex-wrap: wrap;
  }

  .hero-actions :global(.btn--outline) {
    color: var(--color-cream);
    border-color: rgba(250, 247, 242, 0.5);
  }

  .hero-actions :global(.btn--outline:hover) {
    background-color: rgba(250, 247, 242, 0.15);
    border-color: var(--color-cream);
    color: var(--color-cream);
  }

  @media (max-width: 768px) {
    .hero {
      min-height: 40vh;
      padding-block: var(--space-3xl);
    }
  }
</style>
