---
import Button from '../shared/Button.astro';
---

<section class="hero">
  <img src="/images/sunset-hero.jpg" alt="" class="hero-bg" width="4032" height="3024" />
  <div class="hero-overlay"></div>
  <div class="container hero-content">
    <h1 class="hero-title">Montessori for Adolescents</h1>
    <p class="hero-subtitle">
      Empowering educators and parents to nurture the adolescent spirit
      through Montessori philosophy, community, and shared wisdom.
    </p>
    <div class="hero-actions">
      <Button href="/vision/" variant="primary" size="lg">Our Vision</Button>
      <Button href="/webinars/" variant="outline" size="lg">Explore Webinars</Button>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    padding-block: var(--space-5xl);
    text-align: center;
    overflow: hidden;
    min-height: 80vh;
    display: flex;
    align-items: center;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center 40%;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(62, 49, 42, 0.55) 0%,
      rgba(62, 49, 42, 0.4) 50%,
      rgba(62, 49, 42, 0.7) 100%
    );
  }

  .hero-content {
    position: relative;
    z-index: 1;
  }

  .hero-title {
    font-size: var(--text-5xl);
    color: var(--color-cream);
    margin-bottom: var(--space-lg);
    letter-spacing: var(--tracking-tight);
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  }

  .hero-subtitle {
    font-size: var(--text-lg);
    color: rgba(250, 247, 242, 0.9);
    max-width: 620px;
    margin-inline: auto;
    margin-bottom: var(--space-2xl);
    line-height: var(--leading-relaxed);
    text-shadow: 0 1px 4px rgba(0, 0, 0, 0.3);
  }

  .hero-actions {
    display: flex;
    gap: var(--space-md);
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Override outline button for dark background */
  .hero-actions :global(.btn--outline) {
    color: var(--color-cream);
    border-color: rgba(250, 247, 242, 0.5);
  }

  .hero-actions :global(.btn--outline:hover) {
    background-color: rgba(250, 247, 242, 0.15);
    border-color: var(--color-cream);
    color: var(--color-cream);
  }

  @media (max-width: 768px) {
    .hero {
      min-height: 60vh;
      padding-block: var(--space-3xl);
    }
  }
</style>
