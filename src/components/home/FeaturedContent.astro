---
import Card from '../shared/Card.astro';

const features = [
  {
    tag: 'Vision',
    title: 'The Third Plane of Development',
    description: 'Discover Montessori\'s profound insights into adolescence — a time of social rebirth, moral development, and the quest for identity.',
    href: '/about/',
  },
  {
    tag: 'Resources',
    title: 'Guides & Downloads',
    description: 'Practical, downloadable resources for implementing Montessori principles with adolescents in schools and at home.',
    href: '/resources/',
  },
  {
    tag: 'Webinars',
    title: 'Learn & Connect',
    description: 'Expert-led webinars exploring topics from adolescent psychology to creating prepared environments for the third plane.',
    href: '/webinars/',
  },
  {
    tag: 'Community',
    title: 'Global Partners',
    description: 'Our mission is to spread Montessori wisdom to under-resourced communities across the globe — opening Montessori farm-based living communities where the world needs them most.',
    href: '/partners/',
  },
];
---

<section class="featured section">
  <div class="container">
    <h2 class="featured-heading text-center">Explore Our Work</h2>
    <p class="featured-intro text-center">
      Dedicated to advancing Montessori education for adolescents through research,
      resources, and global collaboration.
    </p>
    <div class="featured-grid">
      {features.map((feature) => (
        <Card
          tag={feature.tag}
          title={feature.title}
          description={feature.description}
          href={feature.href}
        />
      ))}
    </div>
  </div>
</section>

<style>
  .featured-heading {
    margin-bottom: var(--space-md);
  }

  .featured-intro {
    color: var(--color-text-light);
    max-width: 600px;
    margin-inline: auto;
    margin-bottom: var(--space-3xl);
    font-size: var(--text-lg);
  }

  .featured-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: var(--space-xl);
  }
</style>
