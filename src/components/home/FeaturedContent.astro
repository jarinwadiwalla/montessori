---
import Card from '../shared/Card.astro';

const features = [
  {
    tag: 'Consulting',
    title: 'On-the-Ground Support',
    description: 'We don\'t just advise — we show up. Hands-on, on-site help to build your Montessori adolescent program from the ground up.',
    href: '/consulting/',
  },
  {
    tag: 'Access',
    title: 'Access & Equity',
    description: 'Bringing Montessori adolescent programming to communities that have never had access — because this work belongs to everyone.',
    href: '/access/',
  },
  {
    tag: 'Approach',
    title: 'Whole-Person Development',
    description: 'Integrating Montessori philosophy with mindfulness, social/emotional learning, and holistic traditions for complete adolescent development.',
    href: '/whole-person/',
  },
];
---

<section class="featured section">
  <div class="container">
    <h2 class="featured-heading text-center">What We Do</h2>
    <p class="featured-intro text-center">
      Practical support for building Montessori-inspired adolescent programs —
      on the ground, where it matters.
    </p>
    <div class="featured-grid">
      {features.map((feature) => (
        <Card
          tag={feature.tag}
          title={feature.title}
          description={feature.description}
          href={feature.href}
        />
      ))}
    </div>
  </div>
</section>

<style>
  .featured-heading {
    margin-bottom: var(--space-md);
  }

  .featured-intro {
    color: var(--color-text-light);
    max-width: 600px;
    margin-inline: auto;
    margin-bottom: var(--space-3xl);
    font-size: var(--text-lg);
  }

  .featured-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: var(--space-xl);
  }
</style>
